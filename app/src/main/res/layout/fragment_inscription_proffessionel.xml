<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/petite_anonce_logo"
    android:orientation="vertical"
    android:paddingStart="8dp"
    tools:context=".AddFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="50dp"
                android:foregroundGravity="center"
                android:gravity="center_horizontal"
                android:text="@string/bienvenu"
                android:textColor="@color/noir_transparent"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editText_SIRET"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/edittext"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:ems="10"
                android:hint="@string/siret"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editText_mail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:ems="10"
                android:hint="@string/mail"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editText_mdp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:ems="10"
                android:hint="@string/mdp"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="8dp"
                android:password="true" />

            <EditText
                android:id="@+id/editText_nom_de_societe"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:ems="10"
                android:hint="@string/nom_societe"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="8dp"
                android:password="false" />

            <EditText
                android:id="@+id/editTextTel"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="5dp"
                android:background="@drawable/edittext"
                android:drawablePadding="4dp"
                android:elevation="6dp"
                android:ems="10"
                android:hint="@string/tel"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:padding="8dp" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="25dp"
                android:checked="true"
                android:minHeight="48dp"
                android:text="@string/professionel" />

            <Button
                android:id="@+id/btn2_inscription"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/saumon"
                android:text="@string/inscription"
                app:cornerRadius="50dp" />
        </LinearLayout>
    </ScrollView>


</FrameLayout>