<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">
                <RelativeLayout
                    android:id="@+id/titleBar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/closeBtn"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_baseline_arrow_back_ios_24"
                        android:contentDescription="@string/revert" />

                    <TextView
                        android:id="@+id/dialogTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/filtre"
                        android:layout_marginTop="20dp"
                        android:layout_centerInParent="true"
                        app:layout_constraintStart_toEndOf="@+id/closeBtn"
                        android:gravity="center"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>


                </RelativeLayout>

                <!--category-->
                <TextView
                    android:id="@+id/category"
                    android:layout_below="@+id/titleBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categorieTitre"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TableLayout
                    android:id="@+id/gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category">
                    <TableRow>
                        <CheckBox
                            android:id="@+id/livres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>

                        <CheckBox
                            android:id="@+id/musique"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>
                    </TableRow>

                    <TableRow>
                        <CheckBox
                            android:id="@+id/deco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>
                        <CheckBox
                            android:id="@+id/vehicule"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>
                    </TableRow>

                    <TableRow>
                        <CheckBox
                            android:id="@+id/immo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>
                        <CheckBox
                            android:id="@+id/multimedia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/pseudo"/>
                    </TableRow>

                </TableLayout>


                <!--State-->
                <TextView
                    android:id="@+id/state"
                    android:layout_below="@+id/gridview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/etat"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TableLayout
                    android:id="@+id/stateTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/state">

                    <TableRow>
                        <CheckBox
                            android:id="@+id/neuf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/neuf"/>
                        <CheckBox
                            android:id="@+id/tresbon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/tresbon"/>
                    </TableRow>

                    <TableRow>
                        <CheckBox
                            android:id="@+id/bon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/bon"/>
                        <CheckBox
                            android:id="@+id/satif"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                            android:text="@string/satif"/>
                    </TableRow>
                </TableLayout>

                <!--Price-->
                <TextView
                    android:id="@+id/price"
                    android:layout_below="@+id/stateTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/prix"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />


                <com.google.android.material.slider.RangeSlider
                    android:id="@+id/rangeSlider"
                    android:layout_below="@+id/price"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:valueFrom="0.0"
                    android:valueTo="2500.0"
                    app:values="@array/initial_range_slider_values"
                    android:stepSize="100.0"  />

                <!--Price-->
                <TextView
                    android:id="@+id/location"
                    android:layout_below="@+id/rangeSlider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/localiser"
                    android:textColor="@color/black"
                    android:layout_marginVertical="10dp"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />


                <Button
                    android:id="@+id/btn_clear"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:drawableTint="@color/noirTransparent"
                    android:shadowColor="@color/white"
                    android:text="@string/reinitialiser"
                    android:textColor="@color/grey" />

                <Button
                    android:id="@+id/btn_deconnexion"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/location"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="50dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_logout_24"
                    android:drawableTint="@color/noirTransparent"
                    android:shadowColor="@color/white"
                    android:text="@string/rechercher"
                    android:textColor="@color/grey" />


            </RelativeLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>